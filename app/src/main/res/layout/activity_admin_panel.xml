<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".AdminPanel">

    <Button
        android:id="@+id/changepass"
        android:layout_width="144dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/corner_round_button"
        android:gravity="center"
        android:text="Şifre\n  değiştir  "
        android:textAlignment="gravity"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changename"
        android:layout_width="140dp"
        android:layout_height="102dp"
        android:layout_marginStart="188dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/corner_round_button"
        android:gravity="center"
        android:text="Kullanıcı Adı Değiştir"
        android:textAlignment="gravity"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addadmin"
        android:layout_width="144dp"
        android:layout_height="102dp"
        android:layout_marginStart="364dp"
        android:layout_marginLeft="364dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/corner_round_button"
        android:gravity="center"
        android:text="Yönetici ekle"
        android:textAlignment="gravity"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>